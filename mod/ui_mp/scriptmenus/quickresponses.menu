            close class;
			open self;
		}
		onEsc
		{
            close class;
			open self;
		}

        itemDef
		{
			rect 0 0 266 23 HORIZONTAL_ALIGN_CENTER VERTICAL_ALIGN_CENTER
			decoration
			visible 1
			style 1
			forecolor 1 1 1 1
			textfont 9
			textalign ITEM_ALIGN_TOP_CENTER
			textstyle ITEM_TEXTSTYLE_SHADOWED
			textscale 0.5
            exp                       rect X ( -325 )
            exp                       rect Y ( -162 )
			visible when ( ( 1 ) )
			exp text ( "@MAPVOTE" ) 
		}

        itemDef
		{
			rect 0 0 266 23 HORIZONTAL_ALIGN_CENTER VERTICAL_ALIGN_CENTER
			decoration
			visible 1
			style 1
			forecolor 1 1 1 1
			textfont 1
