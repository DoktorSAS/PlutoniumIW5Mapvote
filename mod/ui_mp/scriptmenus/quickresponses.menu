		{
			rect 0 0 266 23 HORIZONTAL_ALIGN_CENTER VERTICAL_ALIGN_CENTER
			decoration
			visible 1
			style 1
			forecolor 1 1 1 1
			textfont 9
			textalign ITEM_ALIGN_TOP_CENTER
			textstyle ITEM_TEXTSTYLE_SHADOWED
			textscale 0.5
            exp                       rect X ( 138 )
            exp                       rect Y ( -152 )
			visible when ( ( 1 ) )
			exp text ( dvarstring("votetime") ) 
		}

		ADD_MAPBUTTON(1, 0, 0 )
		ADD_MAPBUTTON(2, 1, 0 )
		ADD_MAPBUTTON(3, 2, 0 )
